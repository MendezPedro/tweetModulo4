
<div class="container row">
  <div class="col-md-6 text-justify">
    <h1 class="text-center">Loguearse</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group text-center">
        <%= f.label :email_field, 'Su Correo' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "ingrese su email" %>
      </div>

      <div class="form-group text-center">
        <%= f.label :password, 'Su contraseña' %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "ingrese su contraseña"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field text-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'Recuerdame' %>
        </div>
      <% end %>
      <div class="field text-center">
        <%= f.button "Iniciar sesion", class:"px-3 mx-5 btn btn-primary text-center" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-6 text-center">
    <%= image_tag("icon.png") %>
  </div>

</div>
